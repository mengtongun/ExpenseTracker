# SQL Server Configuration
SQL_ACCEPT_EULA=Y
SQL_SA_PASSWORD=Your_password123
SQL_PID=Express
SQL_PORT=1433

# SQL Server Resource Limits
SQL_CPU_LIMIT=1.0
SQL_MEMORY_LIMIT=2G
SQL_CPU_RESERVATION=0.5
SQL_MEMORY_RESERVATION=1G

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
API_PORT=8080

# Database Connection String
# Set this to override the default connection string
# Use the same password as SQL_SA_PASSWORD above
# Example: CONNECTION_STRING=Server=sqlserver;Database=ExpenseTrackerDb;User=sa;Password=Your_password123;TrustServerCertificate=True;
CONNECTION_STRING=

# JWT Configuration
JWT_ISSUER=ExpenseTracker
JWT_AUDIENCE=ExpenseTracker
JWT_SIGNING_KEY=ChangeMeInProduction_AtLeast32CharsLong
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

# API Resource Limits
API_CPU_LIMIT=1.0
API_MEMORY_LIMIT=1G
API_CPU_RESERVATION=0.25
API_MEMORY_RESERVATION=512M
